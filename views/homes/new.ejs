<% layout('layouts/boilerplate') -%>
<% include ../partials/navbar %>
<% block('head').append('<link rel="stylesheet" href="/stylesheets/newPage.css">') %>

<div class='container' id='content'>
	<main class='row'>
		<div class='col-md-12'>
			<h2>Add A Property</h2>
			<form action='/homes' method='POST' enctype='multipart/form-data'>
				<div class='form-group dropdown'>		
						<select id="state" name='state' class='form-control'>
						<option value='0'>State</option>
						<option value="Lagos">Lagos</option>
						<option value="Abuja">Abuja</option>
					</select>
				</div>
				
				<div class='form-group dropdown'>
					<select id="location" name='location' class='form-control'>
						<option value='0'>Location</option>  	
					</select>					
				</div>
				
				<div class='form-group dropdown'>
					<select id='lease' name='lease' class='form-control'>
						<option value='0'>Category</option>
						<option value='RENT'>Rent</option>
						<option value='SALE'>Sale</option>
					</select>
				</div>
				
				<div class='form-group'>
					<label for='address'>Address</label>
					<input type='text' name='address' placeholder='what is the address' class='form-control'>
				</div>
	
				<div class='form-group'>
					<label for='bedrooms'>Bedrooms</label>
					<input type='number' class='form-control' placeholder='Number of bedrooms' step='1' max='6' name='bedrooms'>
				</div>
				
				<div class='form-group'>
					<label for='price'>Price</label>
					<input type='number' class='form-control' placeholder='Price of property' step='1' name='price'>
				</div>
				
				<div class='form-group'>
					<label for='description'>Description</label>
					<textarea name='description' class='form-control' placeholder='Please describe the property'></textarea>
				</div>
				
				<div class='form-group'>
					<label for='pictures'>Pictures</label>
					<input type='file' class='form-control' name='pictures' accepts='images/*' multiple>
				</div>
				
				<button class='btn btn-primary'>Submit</button>
				</form>

		<div>
		
			
	</main>
</div>
	

<script src='/javascripts/data.js'></script>
<script src='/javascripts/editHome.js'></script>