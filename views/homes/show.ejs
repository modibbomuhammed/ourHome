
<% layout('layouts/boilerplate') -%>
<section>
	<%= home.state %> State
			<ul>
				<li> location at <%= home.location %></li>
				<li> Going for <%= home.lease %></li>
				<li> <%= home.bedrooms %> bedrooms property costing N<%= home.price %></li>
				<li><a href='/homes/<%= home.id %>/edit' class='btn btn-primary'>EDIT</a><form style='display: inline'action='/homes/<%= home.id %>?_method=DELETE' method='POST'><button class='btn btn-danger'>DELETE(Warning you can't retrieve this data)</button></form></li>
				<li> Below are pictures of the property: 
					<ul>
					<% home.pictures.forEach(photo => { %>
						<li><img src='<%= photo.url %>'></li>
					<% }) %> 
					</ul>
				</li>
			</ul>
	</section>
	
<div id="map"></div>


<script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: <%= home.lat %>, lng: <%= home.lng %>},
          zoom: 8
        });
      }
	
</script>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZ3LGGrJoGt7C_8xTzh3mKpm0EkQJa1aI&callback=initMap"
    async defer></script>
